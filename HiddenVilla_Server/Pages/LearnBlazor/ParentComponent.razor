@page "/parentComponent"

<h3 class="text-danger">Parent Child Component</h3>

<CascadingValue Value="@messageForGrandChild" Name="MessageFromGrandParent">
    <CascadingValue Value="@LuckyNumber" Name="GrandParentsLuckyNumber">
        <ChildComponent @ref="childComp"
                        OnClickButtonMethod="ShowMessage" 
                        Title="This title is passed as a parameter from parent component"> 
            <ChildContent>
                Render Fragement from parent!!
            </ChildContent>
            <DangerChildContent>
                Danger content from Render Fragment!
            </DangerChildContent>
    
        </ChildComponent>
    </CascadingValue>
</CascadingValue>
<AnotherChildComponent  placeholder="parent text"></AnotherChildComponent>

<p><b>@messagetext</b></p>

<div class="row">
    <button class="btn btn-success" @onclick="() => childComp.ShowToastrSuccess()">Show Alert</button>
</div>

@code {
    private ChildComponent childComp { get; set; }

    private string messageForGrandChild = "This is a message from Grand Parent!!";
    public string LuckyNumber { get; set; } = "7";

    private string messagetext = "";

    private void ShowMessage(MouseEventArgs e)
    {
        messagetext = "Blazzing text from parent.";
    }
}

